generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  role      Role   @default(USER)
  bookings  Booking[]
}

model Train {
  id          Int    @id @default(autoincrement())
  name        String
  source      String
  destination String
  totalSeats  Int
  bookings    Booking[]
}

model Booking {
  id     Int    @id @default(autoincrement())
  userId Int
  trainId Int
  seatCount Int
  user   User   @relation(fields: [userId], references: [id])
  train Train @relation(fields: [trainId], references: [id])
  status BookingStatus @default(PENDING)
}

enum Role {
  USER
  ADMIN
}

enum BookingStatus {
  PENDING
  BOOKED
  CANCELLED
}
